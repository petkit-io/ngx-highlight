{
  "name": "@petkit/ngx-highlight",
  "version": "1.0.4",
  "description": "angular highlight component",
  "main": "index.js",
  "scripts": {
    "version": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0 && git add CHANGELOG.md",
    "commitmsg": "commitlint -e $GIT_PARAMS"
  },
  "ngPackage": {
    "dest": "../../../dist/ngx-highlight",
    "lib": {
      "entryFile": "public-api.ts",
      "umdModuleIds": {}
    },
    "whitelistedNonPeerDependencies": []
  },
  "peerDependencies": {
    "highlight.js": "^9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/petkit-io/ngx-highlight.git"
  },
  "keywords": [
    "angular",
    "highlight"
  ],
  "author": "liuxin",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/petkit-io/ngx-highlight/issues"
  },
  "homepage": "https://github.com/petkit-io/ngx-highlight#readme",
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
